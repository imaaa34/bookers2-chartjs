<canvas id="pieChart">
</canvas>

<script>
$(document).on('turbolinks:load', function(){
  var ctx = document.getElementById("pieChart");
  var pieChart = new Chart(ctx, {
    type: 'pie',
    data: {
      labels: ["賛成", "反対", "aaa", "<%= user.name %>"], //データ項目のラベル
      datasets: [{
          backgroundColor: [
              "#c97586",
              "#bbbcde",
              "#93b881",
              "#e6b422"
          ],
          data: [45, 32, 18, <%= user.books.count %>] //グラフのデータ
      }]
    },
    options: {
      title: {
        display: true,
        //グラフタイトル
        text: '投稿数割合'
      }
    }
  });
});
</script>