<%= form_with model:book,local:true do |f| %>
<%= render 'layouts/errors', obj: book %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control book_title' %>
  </div>
  <div class="form-group">
    <%= f.label :category %><br>
    <%= f.select :category, [["Nobel", "Nobel"], ["Fantasy", "Fantasy"], ["SF", "SF"], ["Mystery", "Mystery"], ["Romance", "Romance"], ["Business", "Business"], ["Comics", "Comics"]], include_blank: "Please select", class: 'form-control book_category' %>
  </div>
  <div class="form-group">
    <%= f.label :opinion %>
    <%= f.text_area :body, class: 'form-control book_body' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
